{
  "name": "monaco-ui",
  "private": true,
  "description": "A collection of React Components for future Web Applications.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "copydocs": "cp -R packages/docs/.docz/dist/ docs",
    "docs": "cd packages/docs && yarn run docs",
    "docs:build": "cd packages/docs && yarn run docs:build",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna run clean --parallel",
    "start": "lerna run start --stream",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shreelimbkar/monaco-ui.git"
  },
  "keywords": [
    "react",
    "component",
    "components",
    "design",
    "framework",
    "frontend",
    "react",
    "react-component",
    "ui"
  ],
  "author": "Shrivardhan Limbkar <limbkarshree@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shreelimbkar/monaco-ui/issues"
  },
  "homepage": "https://github.com/shreelimbkar/monaco-ui#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "@types/styled-components": "^5.1.10",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.1",
    "react-app-rewired": "^2.1.8",
    "ts-jest": "^23.10.5"
  },
  "dependencies": {
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/styled-system": "^5.1.14",
    "customize-cra": "^1.0.0",
    "docz": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.1",
    "styled-components": "^5.3.0",
    "styled-system": "^5.1.5",
    "typescript": "^4.3.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  }
}
